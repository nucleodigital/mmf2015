<% content_for :title do %>
<%= t('admin.session.title') %>
<% end %>

<div class="vertical-center">

  <div class="col-md-3 device-container">

    <div class="device-form">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, t('admin.session.email') %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
      </div>

      <div class="form-group">
        <%= f.label :password, t('admin.session.password') %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
      </div>

      <div class="col-md-12 nopadding">
        <div class="col-md-6 nopadding">
          <% if devise_mapping.rememberable? -%>
          <div class="remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, t('admin.session.remember_me') %>
          </div>
          <% end -%>
        </div>
        <div class="col-md-6 nopadding">
          <%= f.submit t('admin.links.sign_in'), class: "btn btn-primary btn-lg pull-right" %>
        </div>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>

    <div class="device-footer">
      <%= simple_format t('admin.session.footer') %>
    </div>

  </div>



</div>
