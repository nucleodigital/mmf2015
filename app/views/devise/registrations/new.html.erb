<% content_for :title do %>
<%= t('admin.registration.title') %>
<% end %>

<h2 class="device-title"><%= t('admin.registration.title') %></h2>
<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, t('admin.session.email') %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password, t('admin.session.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t('admin.registration.minimum_password_length') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t('admin.registration.confirmation_password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
  </div>

  <div class="actions">
    <%= f.submit t('admin.registration.create'), class: "btn btn-primary btn-lg pull-right" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
